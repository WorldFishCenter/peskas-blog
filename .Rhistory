Sys.time()
library(lubridate)
# Get the current date and time
now <- Sys.time()
# Add the time zone offset of 13 hours
now_with_offset <- now + hours(13)
# Format the date and time string
formatted_date_time <- format(now_with_offset, "%Y-%m-%dT%H:%M:%S+13:00")
print(formatted_date_time)
library(lubridate)
# Get the current date and time
current_time <- now(tzone = "Pacific/Tongatapu")
# Format the date and time in the desired format
formatted_time <- format(current_time, format = "%Y-%m-%dT%H:%M:%S%z")
print(formatted_time)
